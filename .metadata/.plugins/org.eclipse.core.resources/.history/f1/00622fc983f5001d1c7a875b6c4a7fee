package ChannelAutomation;

import org.testng.Assert;
import org.testng.annotations.Test;

import com.Channel4.BaseClass.BaseClass;
import com.Channel4.PageObjects.Channel4HomePage;
import com.Channel4.Utils.Log;

public class VerifyHomePageNavigation extends BaseClass{
	
	
	
	
	@Test
	public void VerifyUserNavigationForHomapage()
	{
		Log.startTestCase("VerifyHomePageNavigation");
		Channel4HomePage Hp = new Channel4HomePage(getDriver());
	    Hp.HomeIcon().click();
	    Hp.SearchOption().click();
	    Log.info("Entering Values In SeachBox");
	    Hp.SearchBox().sendKeys("Made in Chelsea");
	    Hp.ClickOnFirstOption().click();
	    Hp.PlayButton().click();
	    Hp.CloseButton().click();
	    String Color=Hp.ButtonBackground();
	    Assert.assertEquals("Colour","Colour");
	    
	    
	}

}
